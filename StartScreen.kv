<FullCircle@BoxLayout>:
    size: 100, 100
    canvas.before:
        Color:
            rgba:0.2,1,0.2,1
        Ellipse:
            pos: self.pos     # Position of the circle (same as the widget's position)
            size: 100, 100

<HollowCircle@BoxLayout>:
    size: 100, 100
    canvas.before:
        Color:
            rgba:1,1,1,1
        Line:
            width: 2
            circle: (self.center_x, self.center_y, min(50, 50))
            
            # pos: self.pos     # Position of the circle (same as the widget's position)
            # size: 100, 100
      
    

<Libelle@BoxLayout>:
    size_hint_x: 0.75

<AxisX@BoxLayout>:
    canvas.before:
        Color:
            rgba:0.5,0.5,1,1
        Rectangle:
            pos: self.pos
            size: root.width, 2


<AxisY@BoxLayout>:
    canvas.before:
        Color:
            rgba:0.5,0.5,1,1
        Rectangle:
            pos: self.pos
            size: 2, root.height
    
<StartScreen>:
    BoxLayout:               
        Libelle:
            BoxLayout:
                orientation: "vertical"
                FloatLayout:
                    size_hint_y:0.9
                    AxisX: 
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint: 1.0, 0.0
                    AxisY: 
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint: 0.0, 1.0
                    FullCircle:
                        size_hint: None, None
                        pos_hint: {'center_x': root.pos_x, 'center_y': root.pos_y}
                    HollowCircle: 
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            size_hint_x: 0.25
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top' 
                Button:
                    id: toggle_button
                    text: 'Logger'
                    size_hint: (1, None)

                    on_press: 
                        root.manager.transition.direction = 'right'
                        root.btn_config()

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        id: x_label
                        text: ""
                    Label:
                        id: y_label
                        text: ""
                    Label:
                        id: z_label
                        text: ""

