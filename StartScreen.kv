<StartScreen>:

    BoxLayout:
        BoxLayout:
            size_hint_x: 0.75 

            ToggleButton:
                id: space
                text: 'SPACE'
                
        BoxLayout:
            size_hint_x: 0.25  
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top'  

                ToggleButton:
                    id: toggle_button
                    text: 'Logger'
                    size_hint: (1, None)
                    on_press: 
                        root.manager.transition.direction = 'right'
                        root.toggle_state()
                        root.btn_config()

        
    