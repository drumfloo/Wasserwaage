<StartScreen>:
    RelativeLayout:
        
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'

            
            ToggleButton:
                id: toggle_button
                text: 'Logger'
                on_press: 
                    root.manager.transition.direction = 'right'
                    root.toggle_state()
                    root.btn_config()
                size_hint: (None, None)
                width: '100dp'
                height: '48dp'
                          

                          