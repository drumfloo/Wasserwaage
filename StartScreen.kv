<CircleMAX@BoxLayout>:
    size: 100, 100
    canvas.before:
        Color:
            rgba:1,1,1,1
        Ellipse:
            pos: self.pos     # Position of the circle (same as the widget's position)

            size: 100, 100
                    
<Libelle>:
    BoxLayout:        
        orientation:"vertical"
        FloatLayout:
            size_hint_y:0.9
            CircleMAX:
                size_hint: None, None
                pos_hint: {'center_x': root.xval, 'center_y': 0.5}

<StartScreen>:
    BoxLayout:
        Libelle:
            size_hint_x: 0.75
        BoxLayout:
            size_hint_x: 0.25          
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top' 
                Button:
                    id: toggle_button
                    text: 'Logger'
                    size_hint: (1, None)

                    on_press: 
                        root.manager.transition.direction = 'right'
                        root.btn_config()
                Label:
                    id: Label_X
                    text: "0815"
                Label:
                    id: Label_Y
                    text: "0815"
                Label:
                    id: Label_Z
                    text: "0815"
        


  